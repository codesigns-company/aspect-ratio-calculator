{
  "name": "pixel-calc",
  "version": "1.0.0",
  "description": "Pixel Aspect Ratio Calculator - A comprehensive tool for calculating aspect ratios and pixel dimensions",
  "main": "index.html",
  "scripts": {
    "build-css": "sass --style=compressed src/assets/scss/main.scss src/assets/css/main.css",
    "watch-css": "sass --watch --style=expanded src/assets/scss/main.scss src/assets/css/main.css",
    "purge-css": "purgecss --css src/assets/css/main.css --content 'src/**/*.html' --output src/assets/css/main.css --safelist 'col-*|row|container|justify-*|align-*|flex-*|text-*|bg-*|border|rounded|shadow|p-*|m-*|btn-*|nav-*|navbar-*|card-*|form-*|d-*|w-*|h-*|mt-*|mb-*|ml-*|mr-*|mx-*|my-*|pt-*|pb-*|pl-*|pr-*|px-*|py-*|fs-*|fw-*|lh-*|gap-*|table-*|list-group*|dropdown-*|collapse-*|modal-*|tooltip-*|popover-*|carousel-*|toast-*|alert-*|badge-*|progress-*|spinner-*|ratio-*|visually-*|opacity-*|z-index-*|position-*|top-*|bottom-*|left-*|right-*|translate-*|breadcrumb*|pagination*|accordion-*|offcanvas-*|input-group*|floating-*|placeholder-*|form-control|form-select|btn-close|fade|show|hide|active|disabled|focus|valid|invalid|was-validated|is-valid|is-invalid|valid-feedback|invalid-feedback|data-bs-theme|dark|light|bi|bi-*'",
    "build-css-purged": "npm run build-css && npm run purge-css",
    "build": "npm run build-css-purged",
    "dev": "npm run watch-css",
    "watch": "npm run watch-css"
  },
  "keywords": [
    "aspect-ratio",
    "calculator",
    "pixel",
    "dimensions",
    "bootstrap",
    "sass"
  ],
  "author": "Pixel Calculator",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "lenis": "^1.3.15"
  },
  "devDependencies": {
    "purgecss": "^7.0.2",
    "sass": "^1.69.5"
  }
}
